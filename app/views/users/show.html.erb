<h2>User Details</h2>
<!--
  Can use the render partial below safely becasue it checks for logged in user
  befoe allowing for a destroy action, so all we get is the llist.
-->

<dl class="dl-horizontal">
  <dt>
    <strong>Full Name</strong>
  </dt>
  <dd><%= @user.full_name %></dd>
  <dt>
    <strong>Email</strong>
  </dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks.</p>
<% end %>

<%= link_to "Back", my_friends_path, class: "btn btn-primary" %>